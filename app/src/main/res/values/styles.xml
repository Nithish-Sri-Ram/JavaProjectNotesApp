<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.JavaNotesApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Splash screen theme -->
    <style name="AppTheme.Splash" parent="Theme.SplashScreen">
        <!-- Set background color for splash -->
        <item name="windowSplashScreenBackground">@color/background_color</item>

        <!-- Set an animated icon or logo -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>

        <!-- Set animation duration -->
        <item name="windowSplashScreenAnimationDuration">2000</item>

        <!-- Post-splash theme -->
        <item name="postSplashScreenTheme">@style/Theme.JavaNotesApp</item>
    </style>
</resources>
